---
import TipLayout from '@/features/tips/layouts/TipLayout.astro';
import { type LanguageCode } from '@/i18n/ui';
import { getCollection } from 'astro:content';

let lang = 'es' as LanguageCode;

export async function getStaticPaths() {
  const tips = await getCollection('tips', ({ data}) => {
    return data.isDraft !== true && data.lang === 'es';
  });

  return tips.map((tip) => ({
    params: { slug: tip.id.replace(/^(es|en)\//, '')},
    props: { tip },
  }));
}

const { tip } = Astro.props;
---

<TipLayout tip={tip} />
