---
import { ContactScreen } from '@/features/contact';
import { defaultLanguage, useTranslations, type LanguageCode } from '@/i18n/ui';
import BaseLayout from '../layouts/BaseLayout.astro';
import { Content } from '@/features/contact/content/es.mdx';

const lang = defaultLanguage as LanguageCode;
const t = useTranslations(lang, 'contactPage');

const pageMeta = {
  title: t('pageTitle'),
  description: t('pageDescription'),
};

const layoutProps = {
  lang,
  mainHeadingTitle: pageMeta.title,
  mainHeadingDescription: t('description'),
  imageUrl: t('profileImageUrl'),
  professionalDescription: t('professionalDescription'),
};
---

<BaseLayout pageTitle={pageMeta.title} pageDescription={pageMeta.description}>
  <ContactScreen {...layoutProps} Content={Content} />
</BaseLayout>